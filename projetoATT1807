typedef struct
{
    int idProduto;
    char descricao[40];
    float preco;
} Produto;

typedef struct itemProduto {
  Produto produto;
  struct itemProduto *prox;
} Produtos;

typedef struct
{
    int idCliente;
    char nome[30];
    char celular[10];
} Cliente;

typedef struct
{
    int dia;
    int mes;
    int ano;
} Data;

typedef struct
{
    int idPedido;
    Data data;
    char idCliente;
} Pedido;

typedef struct
{
    int idPedido;
    int idProduto;
    float quantidade;
} PedidoItens;

